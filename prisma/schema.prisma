generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pricing {
  id                 Int      @id @default(autoincrement())
  baseFarePerKm      Float    @default(0.7)
  oneTimeStartingFee Float    @default(70.0)
  hourPrice          Float    @default(7.0)
  premiumHourPrice   Float    @default(9.0)
  waitingHourPrice   Float    @default(7.0)
  discount           Float    @default(0.0)
  discountStartKm    Float    @default(0.0)
  taxRate            Float    @default(0.22)
  createdAt          DateTime @default(now())
}
