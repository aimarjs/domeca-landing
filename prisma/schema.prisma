generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pricing {
  id                 Int      @id @default(autoincrement())
  baseFarePerKm      Float
  oneTimeStartingFee Float
  hourPrice          Float
  waitingHourPrice   Float
  discount           Float
  discountStartKm    Float
  createdAt          DateTime @default(now())
}
